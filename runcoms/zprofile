# https://gist.github.com/rizalp/d776a08a538c5738e821265816ecbccd
# gem install mysql2 -v '0.5.3' -- --with-ldflags=-L/usr/local/opt/mysql/lib --with-cppflags=-I/usr/local/opt/mysql/include --with-ldflags=-L/usr/local/opt/openssl/lib --with-cppflags=-I/usr/local/opt/openssl/include
# gem install mysql2 -v '0.5.3' --source 'https://rubygems.org/'
